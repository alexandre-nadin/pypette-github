#!/usr/bin/env bash
set -euf -o pipefail
source ctgb-pipe.sh

# -------------------
# Parse parameters
# -------------------
function parseParams() {
  while [ $# -ge 1 ]
  do
      case "$1" in
        --prj)
          PROJECT="$2" && shift
          ;;

        -p|--pipeline)
          PIPELINE="$2" && shift
          ;;
  
        -o|--snake-options)
          SNAKE_OPTIONS+=("$2") && shift
          ;;
  
        -h|--help)
          manual && exit
          ;;
  
        --ls-pipes)
          listPipelines
          exit
          ;;
  
        --ls-modules)
          listModules
          exit
          ;;

        -d|--directory)
          SNAKE_DIR="$2" && shift
          ;;
             
        -v|--verbose)
          VERBOSE=true
          ;;
  
        *)
          errorUnrecOpt "$1"
          ;;
  
      esac
      shift
  done
}

function runFlow() {
  initParams
  parseParams "$@"
  checkParams
  exportVarenvs
  execSnakemake
}

runFlow "$@"
