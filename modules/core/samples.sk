include: "samples.py"

rule samplenames:
  """
  List all sample names.
  """
  run:
    data = pipeman.samples.map("{sample_name}")
    print(f"Sample names:\n{data}")

rule samples:
  """
  List all samples.
  """
  run:
    data = pipeman.samples.map("{sample_name}")
    print(pipeman.samples.data)

localrules: samples, samplenames

# -----------
# Wildcards
# -----------
rule samples__runs:
  input: 
    lambda wildcards: pipeman.samples.map(
      'samples/{sample_name}/runs/{sample_run}/', 
      withResult=True,
      **wildcards)
  output:
    "samples/{sample_name}/runs/each/{suffix}"
  run:
    cmd = """
      touch {output}
    """
    exshell(**vars())
  
rule samples__all:
  input: 
    lambda wildcards: pipeman.samples.map(
      "samples/{sample_name}/runs/{sample_run}/", 
      withResult=True, 
      **wildcards)
  output:
    "samples/each/runs/{sample_run}/{suffix}"
  run:
    cmd = """
      touch {output}
    """
    exshell(**vars())
